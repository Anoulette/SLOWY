<div class="card-vehicule">
    <%= cl_image_tag @vehicle.photo.key, height: 300, width: 400, crop: :fill %>

    <div class="card-vehicule-description">
      <h2><%= @vehicle.name %></h2>

      <p>Type de véhicule : <%= @vehicle.vehicle_type %></p>
      <p>Prix du véhicule : <%= @vehicle.price %>€</p>
      <p>Description : <%= @vehicle.details %></p>

      <div class="liens">
        <%= link_to "Retour à la liste des véhicules", vehicles_path %>
        <%# <%= link_to "Réserver ce véhicule", new_vehicle_booking_path %> %>
      </div>
    </div>
</div>
